using System;

public class LinkedList
{
    public Node head,last;
    public class Node
    {
        public int data;
        public Node next;
        public Node(int d)
        {
            data = d;
            next = null;
        }
        
    }
    
    public int Count(Node root)
    {
        if(root == null)
        return 0;
        
        return 1 + Count(root.next);
    }
    
    public void insert(int d)
    {
        Node n = new Node(d);
        if(head == null)
        {
            head = n;
            last =n;
            return;
        }
        last.next = n;
        last = n;
    }
    
    public void printList()
    {
         Node temp = head;
        while(temp != null)
        {
            Console.Write(temp.data + " ");
            temp = temp.next;
        }
    }
    
    public static void Main()
    {
        LinkedList ll = new LinkedList();
        ll.insert(2);
        ll.insert(12);
        ll.insert(22);
        ll.insert(24);
        ll.printList();
        int count = ll.Count(ll.head);
        Console.WriteLine("Count is: " + count);
           
        
    }
}
