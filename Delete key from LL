using System;

public class LinkedList
{
    public Node head,last;
    public class Node
    {
        public int data;
        public Node next;
        public Node(int d)
        {
            data = d;
            next = null;
        }
        
    }
    
    public void insert(int d)
    {
        Node n = new Node(d);
        if(head == null)
        {
            head = n;
            last =n;
            return;
        }
        last.next = n;
        last = n;
    }
    
    public void delete(int key)
    {
        Node temp = head;
        if(head == null)
        return;
        
        Node prev =null;
        
        while(temp != null)
        {
            if(temp.data == key)
            {
                if(prev != null)
                {
                    prev.next = temp.next;
                }
                else
                {
                    head = head.next;
                }
                break;
            }
            prev = temp;
            temp = temp.next;
        }
    }
    public void printList()
    {
         Node temp = head;
        while(temp != null)
        {
            Console.Write(temp.data + " ");
            temp = temp.next;
        }
    }
    
    public static void Main()
    {
        LinkedList ll = new LinkedList();
        ll.insert(2);
         ll.insert(12);
          ll.insert(22);
           ll.insert(24);
           //ll.printList();
           ll.delete(22);
            ll.printList();
        
    }
}
