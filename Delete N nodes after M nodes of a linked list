using System;

public class LinkedList
{
    public Node head,last;
    public int m = 2;
    public int n =2;
    public class Node
    {
        public int data;
        public Node next;
        public Node(int d)
        {
            data = d;
            next = null;
        }
        
    }
    
    public void deleteNodes()
    {
        //Delete n nodes after m nodes
        //if m = 2 then retain 2 and if n =2 then deleted next 2
        
        Node root = head;
        if(root == null)
        return;
        Node nextNode = null;
        int count1 = 1;
        int count2 = 0;
        while(root != null && root.next != null)
        {
            while(count1 != m && root != null)
            {
                root = root.next;
                count1++;
            }
            
            nextNode = root;
            while(count2 != n && nextNode != null && nextNode.next != null)
            {
                nextNode = nextNode.next;
                count2++;
            }
            if(nextNode != null){
             root.next = nextNode.next;}
             else if(root != null)
             {root.next = nextNode;}
            count1 = 0;
            count2 = 0;
        }
    }
  
    public void insert(int d)
    {
        Node n = new Node(d);
        if(head == null)
        {
            head = n;
            last =n;
            return;
        }
        last.next = n;
        last = n;
    }
    
    public void printList()
    {
         Node temp = head;
        while(temp != null)
        {
            Console.Write(temp.data + " ");
            temp = temp.next;
        }
    }
    
    public static void Main()
    {
        LinkedList ll = new LinkedList();
        ll.insert(1);
        ll.insert(2);
        ll.insert(3);
        ll.insert(4);
        ll.insert(5);
        ll.insert(6);
       
        
       ll.printList();
       ll.deleteNodes();
       Console.WriteLine( " After Operation");
       ll.printList();
           
        
    }
}
